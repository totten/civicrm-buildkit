#!/bin/bash
set -e

###############################################################################
## Bootstrap

## Determine the absolute path of the directory with the file
## usage: absdirname <file-path>
function absdirname() {
  pushd $(dirname $0) >> /dev/null
    pwd
  popd >> /dev/null
}

BINDIR=$(absdirname "$0")
PRJDIR=$(dirname "$BINDIR")
VARDIR="${BKIT_VAR:-PRJDIR/app}"
TMPDIR="$VARDIR/tmp"
BLDDIR="$PRJDIR/build"

## Make sure bundled utilities are available, regardless of local config
export PATH="$BINDIR:$PATH"

if [ -z "$OFFLINE" ]; then
  civi-download-tools --quiet
fi

source "$PRJDIR/src/civibuild.lib.sh"
source "$PRJDIR/src/civibuild.aliases.sh"
source "$PRJDIR/src/civibuild.parse.sh"
source "$PRJDIR/src/civibuild.app.sh"

civibuild_parse "$@"

###############################################################################
## Main

## Note: Declare new Actions in src/civibuild.defaults.sh DECLARED_ACTIONS
ACTION_FILE="$PRJDIR/src/command/$ACTION.run.sh"
if [ -f "$ACTION_FILE" ]; then
  source "$ACTION_FILE"
else
  echo "Unrecognized action: $ACTION"
  civibuild_app_usage
fi
